{
  "compilerOptions": {
    "paths": {
      "router/*": ["src/router/*"],
      "components/*": ["src/components/*"],
      "models/*": ["src/models/*"],
      "types/*": ["src/types/*"],
      "themes/*": ["src/themes/*"],
      "assets/*": ["src/assets/*"],
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "esnext",
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "esModuleInterop":true,
    "outDir": "./dist",
    "target": "ES5",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["./src/**/*", "jest-setup.ts"],
  "exclude": ["node_modules", "dist","./src/**/*.spec.ts", "./src/**/*.stories.tsx", "webpack.*.js"]
}